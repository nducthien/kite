<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contract_list_partner_name"
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Partner name"/>

    <TextView
        android:id="@+id/contract_list_contract_type"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Contract type"/>

    <TextView
        android:id="@+id/contract_list_contract_number"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Contract number"/>

    <TextView
        android:id="@+id/contract_list_start_date"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Erv. kezdete"/>

    <TextView
        android:id="@+id/contract_list_end_date"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Erv. vege"/>

</LinearLayout>