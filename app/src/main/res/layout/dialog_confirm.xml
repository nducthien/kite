<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:focusableInTouchMode="true"
    android:minWidth="500dip"
    android:id="@+id/parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="#00000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="3dip"
            android:paddingLeft="5dip"
            android:scaleType="fitCenter"
            android:src="@drawable/kite_icon" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="left|center_vertical"
            android:paddingBottom="1dip"
            android:paddingLeft="5dip"
            android:paddingRight="14dip"
            android:paddingTop="2dip"
            android:text="@string/dummy_text"
            android:textColor="#005500"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/dialog_panel_background"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dialog_layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="7dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_text"
                style="@style/Text.Kite.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:layout_marginTop="15dip"
                android:text="@string/dummy_text_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_layout_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="7dip"
            android:orientation="vertical" >
        </LinearLayout>

        <!--LinearLayout
            android:id="@+id/dialog_layout_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="0dip"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                style="@style/Text.Kite.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:layout_marginTop="15dip"
                android:visibility="invisible"
                android:text="Egyéb megjegyzés:" />

            <EditText
                android:id="@+id/dailog_cancel_et_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:lines="2"
                android:maxLength="225"
                android:visibility="invisible"
                android:maxLines="2" />
        </LinearLayout-->

        <LinearLayout
            android:id="@+id/dialog_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip" >

            <Button
                android:id="@+id/dialog_button_left"
                style="@style/DialogSecondary.Kite"
                android:layout_width="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="@string/dialog_cancel" />

            <Button
                android:id="@+id/dialog_button_right"
                style="@style/DialogPrimary.Kite"
                android:layout_width="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="@string/dialog_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>