<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:focusableInTouchMode="true"
    android:minWidth="700dip"
    android:id="@+id/parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="#00000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="3dip"
            android:paddingLeft="5dip"
            android:scaleType="fitCenter"
            android:src="@drawable/kite_icon" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="left|center_vertical"
            android:paddingBottom="1dip"
            android:paddingLeft="5dip"
            android:paddingRight="14dip"
            android:paddingTop="2dip"
            android:text="@string/dummy_text"
            android:textColor="#005500"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:background="@drawable/dialog_panel_background"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dialog_layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="7dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_text"
                style="@style/Text.Kite.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:layout_marginTop="15dip"
                android:text="@string/dummy_text_large" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="2dip"
            android:orientation="horizontal"
            android:weightSum="2">

            <TabHost
                android:id="@+id/tabhost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="6dp">

                        <RelativeLayout
                            android:id="@+id/tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:id="@+id/bizonylat_progress_loading"
                                style="@style/Progress.Kite.Large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:id="@+id/szamlaszam_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="left|center_vertical"
                                    android:textColor="#005500"
                                    android:textSize="16sp"
                                    android:text="@string/dialog_alkatreszek_osszes"
                                    android:layout_weight="0.8"/>
                                <AutoCompleteTextView
                                    android:id="@+id/dialog_alkatreszek_bizonylat_et_search"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2"
                                    android:singleLine="true"
                                    android:maxLength="6"
                                    android:gravity="left|center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginLeft="4dp"
                                    style="@style/BaseEditText"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/bizonylat_add_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/szamlaszam_ll"
                                android:visibility="gone">
                                <LinearLayout
                                    android:id="@+id/bizonylat_kezzel_cikkszam_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_cikkszam"
                                        android:layout_weight="0.8"/>
                                    <AutoCompleteTextView
                                        android:id="@+id/bizonylat_et_cikkszam"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2"
                                        android:singleLine="true"
                                        android:maxLength="20"
                                        android:gravity="left|center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp"
                                        style="@style/BaseEditText"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/bizonylat_kezzel_mennyiseg_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:layout_below="@id/bizonylat_kezzel_cikkszam_ll">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_mennyiseg"
                                        android:layout_weight="0.8"/>
                                    <EditText
                                        android:id="@+id/bizonylat_et_mennyiseg"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2"
                                        android:singleLine="true"
                                        android:inputType="numberDecimal"
                                        android:maxLength="5"
                                        android:gravity="left|center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp"
                                        style="@style/BaseEditText"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/bizonylat_kezzel_mennyisegi_egyseg_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:layout_below="@id/bizonylat_kezzel_mennyiseg_ll">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_mennyisegi_egyseg"
                                        android:layout_weight="0.8"/>
                                    <Spinner
                                        android:id="@+id/bizonylat_sp_unit"
                                        style="@style/BaseSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="0.2"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp" />
                                </LinearLayout>
                                <Button
                                    android:layout_below="@+id/bizonylat_kezzel_mennyisegi_egyseg_ll"
                                    android:id="@+id/bizonylat_btn_hozzaad"
                                    style="@style/MainMenuButtonSmall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="15dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="center"
                                    android:text="@string/munkalap_btn_add" />
                            </RelativeLayout>
                            <ListView
                                android:id="@+id/alkatreszek_listview_by_bizonylat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/bizonylat_add_rl"
                                android:layout_marginRight="4dp"
                                android:focusable="false">
                            </ListView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:id="@+id/szamlaszam_progress_loading"
                                style="@style/Progress.Kite.Large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:id="@+id/cikktorzs_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="right|center_vertical"
                                    android:textColor="#005500"
                                    android:textSize="16sp"
                                    android:text="@string/dialog_alkatreszek_cikktorzs"/>
                                <AutoCompleteTextView
                                    android:id="@+id/dialog_alkatreszek_cikktorzs_et_search"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:maxLength="8"
                                    android:gravity="left|center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginLeft="4dp"
                                    style="@style/BaseEditText"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/szamla_add_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cikktorzs_ll"
                                android:visibility="gone">
                                <LinearLayout
                                    android:id="@+id/szamla_kezzel_cikkszam_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_cikkszam"
                                        android:layout_weight="0.8"/>
                                    <AutoCompleteTextView
                                        android:id="@+id/szamla_et_cikkszam"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2"
                                        android:singleLine="true"
                                        android:maxLength="20"
                                        android:gravity="left|center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp"
                                        style="@style/BaseEditText"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/szamla_kezzel_mennyiseg_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:layout_below="@id/szamla_kezzel_cikkszam_ll">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_mennyiseg"
                                        android:layout_weight="0.8"/>
                                    <EditText
                                        android:id="@+id/szamla_et_mennyiseg"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2"
                                        android:singleLine="true"
                                        android:inputType="numberDecimal"
                                        android:maxLength="5"
                                        android:gravity="left|center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp"
                                        style="@style/BaseEditText"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/szamla_kezzel_mennyisegi_egyseg_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:layout_below="@id/szamla_kezzel_mennyiseg_ll">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_mennyisegi_egyseg"
                                        android:layout_weight="0.8"/>
                                    <Spinner
                                        android:id="@+id/szamla_sp_unit"
                                        style="@style/BaseSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="0.2"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp" />
                                </LinearLayout>
                                <Button
                                    android:layout_below="@+id/szamla_kezzel_mennyisegi_egyseg_ll"
                                    android:id="@+id/szamla_btn_hozzaad"
                                    style="@style/MainMenuButtonSmall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="15dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="center"
                                    android:text="@string/munkalap_btn_add" />
                            </RelativeLayout>
                            <ListView
                                android:id="@+id/alkatreszek_listview_by_cikktorzs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/szamla_add_rl"
                                android:layout_marginRight="4dp"
                                android:focusable="false">
                            </ListView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/tab3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:id="@+id/cikkszam_progress_loading"
                                style="@style/Progress.Kite.Large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:id="@+id/cikkszam_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.85"
                                    android:gravity="left|center_vertical"
                                    android:textColor="#005500"
                                    android:textSize="16sp"
                                    android:text="@string/dialog_alkatreszek_cikkszam"/>
                                <AutoCompleteTextView
                                    android:id="@+id/dialog_alkatreszek_cikkszam_et_search"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.15"
                                    android:singleLine="true"
                                    android:maxLength="20"
                                    android:gravity="left|center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginLeft="4dp"
                                    style="@style/BaseEditText"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/cikkszan_add_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cikkszam_ll"
                                android:visibility="gone">
                                <LinearLayout
                                    android:id="@+id/cikkszan_kezzel_mennyiseg_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.85"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_mennyiseg"/>
                                    <EditText
                                        android:id="@+id/cikkszan_et_mennyiseg"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.15"
                                        android:singleLine="true"
                                        android:inputType="numberDecimal"
                                        android:maxLength="5"
                                        android:gravity="left|center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp"
                                        style="@style/BaseEditText"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/cikkszam_kezzel_mennyisegi_egyseg_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:layout_below="@id/cikkszan_kezzel_mennyiseg_ll">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="left|center_vertical"
                                        android:textColor="#005500"
                                        android:textSize="16sp"
                                        android:text="@string/alkatresz_tv_mennyisegi_egyseg"
                                        android:layout_weight="0.85"/>
                                    <Spinner
                                        android:id="@+id/cikkszam_sp_unit"
                                        style="@style/BaseSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="0.15"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginLeft="4dp" />
                                </LinearLayout>
                                <Button
                                    android:layout_below="@+id/cikkszam_kezzel_mennyisegi_egyseg_ll"
                                    android:id="@+id/cikkszan_btn_hozzaad"
                                    style="@style/MainMenuButtonSmall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="15dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="center"
                                    android:text="@string/munkalap_btn_add" />
                            </RelativeLayout>
                            <ListView
                                android:id="@+id/alkatreszek_listview_by_cikkszam"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/cikkszan_add_rl"
                                android:layout_marginRight="4dp"
                                android:focusable="false">
                            </ListView>
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </TabHost>

            <View
                android:id="@+id/view2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/primary_green" />

            <RelativeLayout
                android:id="@+id/dialog_alkatreszek_list_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/felhasznalt_alkatreszek_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#005500"
                    android:textSize="16sp"
                    android:padding="20dp"
                    android:text="@string/dialog_alkatreszek_felhasznalt"/>

                <ListView
                    android:layout_below="@+id/felhasznalt_alkatreszek_tv"
                    android:id="@+id/felhasznalt_alkatreszek_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp">
                </ListView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip" >

            <Button
                android:id="@+id/dialog_button_right"
                style="@style/DialogPrimary.Kite"
                android:layout_width="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="@string/dialog_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>