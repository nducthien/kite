<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/actionbar_background_selector"
    android:gravity="left"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.35">
            <TextView
                android:id="@+id/partner_list_tv_name_label"
                style="@style/BaseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:text="@string/partner_tv_name"/>
            <TextView
                style="@style/BaseTextView"
                android:id="@+id/partner_list_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:textColor="@color/value_color"
                android:maxLines="2"
                android:maxLength="200"
                android:text="@string/dummy_text_large"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.65">
            <TextView
                style="@style/BaseTextView"
                android:id="@+id/partner_list_tv_partnercode_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:text="@string/partner_tv_partnercode"/>

            <TextView
                style="@style/BaseEditText"
                android:id="@+id/partner_list_tv_partnercode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="top"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:text="@string/dummy_text_short"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.35">
            <TextView
                android:id="@+id/partner_list_tv_address_label"
                style="@style/BaseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_marginLeft="20dp"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:text="@string/partner_tv_address"/>

            <TextView
                android:id="@+id/partner_list_tv_address"
                style="@style/BaseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="top"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:textColor="@color/value_color"
                android:maxLines="2"
                android:maxLength="200"
                android:text="@string/dummy_text_short"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.65">
            <TextView
                android:id="@+id/partner_list_tv_email_label"
                style="@style/BaseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_gravity="top"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="@string/partner_tv_email"/>

            <TextView
                style="@style/BaseEditText"
                android:id="@+id/partner_list_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:layout_gravity="top"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:text="@string/dummy_text_short"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>