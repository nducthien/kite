<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contract_list_alvazszam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BaseEditText"
            android:text="Alvazszam"/>

        <TextView
            android:id="@+id/contract_list_machine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BaseEditText"
            android:text="Machine name"/>

    </LinearLayout>

    <TextView
        android:id="@+id/contract_list_contract_type"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Contract type"/>

    <TextView
        android:id="@+id/contract_list_contract_number"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Contract number"/>

    <TextView
        android:id="@+id/contract_list_start_date"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Erv. kezdete"/>

    <TextView
        android:id="@+id/contract_list_end_date"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        style="@style/BaseEditText"
        android:text="Erv. vege"/>

</LinearLayout>